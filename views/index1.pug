doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Test de inteligencias multiples
  body
    form(action='/cuestionairo' method='POST')
      -var cont = 1;
      for linea in readcsv
        p=linea
        input#v(type='radio' name=cont value='v')
        label(for="v") Verdadero
        input#f(type='radio' name=cont value='f')
        label(for="f") Falso
        -cont++;
      br
      input(type='submit' value='Enviar')